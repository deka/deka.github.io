{{#if resume.skills.length}}
<section id="skills">
    <h2>Skills</h2>
    <ul class="item">
        {{#each resume.skills}}
        <li>
            {{#if name}}
            {{#if keywords.length}}
            <strong>{{name}}</strong>: {{#each keywords}}{{{.}}}{{#unless @last}}, {{/unless}}{{/each}}
            {{else}}
            <strong>{{name}}</strong>
            {{/if}}
            {{/if}}
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}
