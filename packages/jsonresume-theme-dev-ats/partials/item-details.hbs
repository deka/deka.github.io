<div class="item-details">
    {{#if location}}
    <div class="item-details-title">
        {{location}}
    </div>
    {{/if}}
    {{#if startDate}}
    {{#if endDate}}
    <div class="date">
        {{formatDate startDate}} — {{formatDate endDate}}
    </div>
    {{else}}
    <div class="date">
        {{formatDate startDate}} — Present
    </div>
    {{/if}}
    {{/if}}
    {{#if mainUrl}}
    <div class="url">
        [{{wrapURL url}}]
    </div>
    {{/if}}
</div>
